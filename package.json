{
  "name": "byte-js",
  "description": "Base64 and hex utilities implemented in plain JavaScript, compatible with both browser and Node.js environments.",
  "keywords": [
    "base64",
    "byte",
    "hex"
  ],
  "version": "0.0.1-alpha.1",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "es/index.js",
  "files": [
    "es",
    "lib"
  ],
  "scripts": {
    "build": "tsc && tsc --outDir es --module es2020",
    "dev": "tsc && node ./dist/index.js",
    "format": "prettier --write .",
    "lint": "eslint --ext .js,.ts,.tsx ./src",
    "lint:fix": "eslint --fix --ext .js,.ts,.tsx ./src",
    "test": "jest --collectCoverage"
  },
  "devDependencies": {
    "@types/jest": "^28.1.8",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/john-yuan/byte-js"
  },
  "license": "MIT"
}
